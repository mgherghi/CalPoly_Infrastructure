# Setup OVS  MGMT
ip link set enp131s0 vf 0 vlan 10
ip link set enp131s0 vf 0  spoofchk off
ip link set enp131s0 vf 0 trust on
ip link set enp131s0v0 name ovs-mgmt
ip addr add 4.0.0.9/24 brd + dev ovs-mgmt
ip link  set ovs-mgmt mtu 9000
ip link  set ovs-mgmt up

# Setup LINSTOR MGMT
ip link set enp131s0 vf 1 vlan 20
ip link set enp131s0 vf 1  spoofchk off
ip link set enp131s0 vf 1 trust on
ip link set enp131s0v1 name linstor-mgmt
ip addr add 4.0.1.9/24 brd + dev linstor-mgmt
ip link  set linstor-mgmt mtu 9000
ip link  set linstor-mgmt up


