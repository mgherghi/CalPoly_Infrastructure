ethtool -L enp131s0 rx 16 tx 16
ethtool -L enp131s0d1 rx 16 tx 16

ip link set enp131s0d1 mtu 9000
ip link set enp131s0 mtu 9000
ip link set enp131s0 up 
ip link set enp131s0d1 up

# SETUP DRBD REPLICATION
ip link add link enp131s0 name rdma type vlan id 10 
ip link set dev rdma type vlan egress-qos-map 0:3 
ip link set rdma mtu 9000
ip link set rdma up
ip addr add 4.1.0.8/24 dev rdma

# SETUP LINSTOR MGMT 
ip link add link enp131s0d1 name linstor-mgmt type vlan id 20
ip link set linstor-mgmt mtu 9000 
ip link set linstor-mgmt up
ip addr add 4.2.0.8/24 dev linstor-mgmt

# SETUP OVN NETWORK
ip link add link enp131s0d1 name ovn-mgmt type vlan id 30
ip link set ovn-mgmt mtu 9000
ip link set ovn-mgmt up
ip addr add 4.3.0.8/24 dev ovn-mgmt
