# SETUP MTU
ip link set enp132s0 mtu 9000
ip link set enp132s0d1 mtu 9000

# SETUP DRBD REPLICATION
ip link set enp132s0 name drbd
ip link set drbd up
ip addr add 4.1.0.9/24 dev drbd

# SETUP LINSTOR MGMT 
ip link add link enp132s0d1 name linstor-mgmt type vlan id 20
ip link set linstor-mgmt mtu 9000 
ip link set linstor-mgmt up
ip addr add 4.2.0.9/24 dev linstor-mgmt

# SETUP OVN NETWORK
ip link add link enp132s0d1 name ovn-mgmt type vlan id 30
ip link set ovn-mgmt mtu 9000
ip link set ovn-mgmt up
ip addr add 4.3.0.9/24 dev ovn-mgmt
