ethtool -L enp65s0f0np0 combined 32
ethtool -L enp65s0f1np1 combined 32

ip link set enp65s0f0np0 mtu 9000
ip link set enp65s0f1np1 mtu 9000
ip link set enp65s0f0np0 up
ip link set enp65s0f1np1 up

# SETUP DRBD REPLICATION
ip link add link enp65s0f0np0 name rdma type vlan id 10 
ip link set dev rdma type vlan egress-qos-map 0:3
ip link set rdma mtu 9000
ip link set rdma up
ip addr add 4.1.0.5/24 dev rdma

# Setup NFS Share
ip link add link enp65s0f1np1 name nfs type vlan id 15
ip link set nfs mtu 9000
ip link set nfs up
ip addr add 4.115.0.5/24 dev nfs 

# SETUP LINSTOR MGMT 
ip link add link enp65s0f1np1 name linstor-mgmt type vlan id 20
ip link set linstor-mgmt mtu 9000 
ip link set linstor-mgmt up
ip addr add 4.2.0.5/24 dev linstor-mgmt

# SETUP OVN NETWORK
ip link add link enp65s0f1np1 name ovn-mgmt type vlan id 30
ip link set ovn-mgmt mtu 9000
ip link set ovn-mgmt up
ip addr add 4.3.0.5/24 dev ovn-mgmt

# SETUP INCUS NETWORK
ip link add link enp65s0f1np1 name incus-mgmt type vlan id 40
ip link set incus-mgmt mtu 9000
ip link set incus-mgmt up
ip addr add 4.4.0.5/24 dev incus-mgmt

# SETUP INCUS NETWORKS
ip link add link enp65s0f1np1 name infra type vlan id 50
ip link set infra mtu 9000
ip link set infra up

ip link add link enp65s0f1np1 name admin-labs type vlan id 60
ip link set admin-labs mtu 9000
ip link set admin-labs up

ip link add link enp65s0f1np1 name bdebruhl type vlan id 70
ip link set bdebruhl mtu 9000
ip link set bdebruhl up

ip link add link enp65s0f1np1 name bahartma type vlan id 80
ip link set bahartma mtu 9000
ip link set bahartma up

ip link add link enp65s0f1np1 name srbeard type vlan id 90
ip link set srbeard mtu 9000
ip link set srbeard up

ip link add link enp65s0f1np1 name dofang type vlan id 100
ip link set dofang mtu 9000
ip link set dofang up
